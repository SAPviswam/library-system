<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m">
    <Dialog
        id="idProfileDialog"
        contentWidth="30%"
        contentHeight="20%"
        resizable="true"
        draggable="true"
    >
        <customHeader>
            <Bar>
            <contentLeft>
                    <Button
                        icon="sap-icon://nav-back"
                        press="onCloseProfileDialog"
                        type="Transparent"
                    />
                </contentLeft>
                <contentMiddle>
                    <Title text="Admin Details"/>
                </contentMiddle>
                
            </Bar>
        </customHeader>
        <content >
            <VBox class="idAdminDetils">

                <HBox>
                    <Label text="ID:" class="admindetailstxt"/>
                    <Text text="{ID}" />
                </HBox>
                <HBox>
                    <Label text="Name:" class="admindetailstxt"/>
                    <Text text="{username}" />
                </HBox>
                <HBox>
                    <Label text="Email:" class="admindetailstxt"/>
                    <Text text="{email}" />
                </HBox>
                <HBox>
                    <Label text="Role:" class="admindetailstxt"/>
                    <Text text="{role}" />
                </HBox>
            </VBox>
        </content>
    </Dialog>
</core:FragmentDefinition>



