<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <Dialog id="editBookDialog" title="Edit Book" class="sapUiResponsivePadding--header sapUiResponsivePadding--content sapUiResponsivePadding--footer">
        <content>
            <VBox>
                <Label text="ISBN" />
                <Input id="editISBNInput" value="{bookModel>ISBN}" enabled="true" />
                <Label text="Title" />
                <Input id="editTitleInput" value="{bookModel>title}" />
                <Label text="Author" />
                <Input id="editAuthorInput" value="{bookModel>author}" />
                <Label text="Quantity" />
                <Input id="editQuantityInput" value="{}" />
                <Label text="Genre" />
                <Input id="editGenreInput" value="{}" />
            </VBox>
        </content>
        <beginButton>
            <Button text="Modify" press="onModifyBook" />
        </beginButton>
        <endButton>
            <Button text="Cancel" press="onCancelEdit" />
        </endButton>
    </Dialog>
</core:FragmentDefinition>
