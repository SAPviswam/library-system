<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <Dialog id="editBookDialog" title="Edit Book" class="sapUiResponsivePadding--header sapUiResponsivePadding--content sapUiResponsivePadding--footer">
        <content>
            <VBox>
                <Label text="ISBN" />
                <Input id="editISBNInput" value="{oEditModel>/ISBN}" enabled="true" />
                <Label text="Title" />
                <Input id="editTitleInput" value="{oEditModel>/title}" />
                <Label text="Author" />
                <Input id="editAuthorInput" value="{oEditModel>/author}" />
                <Label text="Quantity" />
                <Input id="editQuantityInput" value="{oEditModel>/quantity}" />
                <Label text="Genre" />
                <Input id="editGenreInput" value="{oEditModel>/genre}" />
                <Label text="Available Quantity" />
                <Input id="editAvailableInput" value="{oEditModel>/availableQuantity}" />
            </VBox>
        </content>
        <beginButton>
            <Button text="Modify" press="onModifyBook" />
        </beginButton>
        <endButton>
            <Button text="Cancel" press="onCancelEdit" />
        </endButton>
    </Dialog>
</core:FragmentDefinition>
