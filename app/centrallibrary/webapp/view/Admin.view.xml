<mvc:View
    controllerName="com.app.centrallibrary.controller.Admin"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:form="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
>
<Page id="_IDGenPage1" title="Admin Page">
    <headerContent>
        <Button id="_IDGenButton1" icon="sap-icon://bell" tooltip="Notifications" />
    </headerContent>
    <content>
        <VBox id="_IDGenVBox1">
            <Title id="_IDGenTitle1" text="Admin Dashboard" level="H2" />
            <Text id="_IDGenText1" text="Available Books:" />
            <Table id="bookDetailsTable" inset="false" items="{/books}">
                <headerToolbar>
                    <Toolbar id="_IDGenToolbar1">
                        <Title id="_IDGenTitle2" text="Book Details" />
                        <ToolbarSpacer id="_IDGenToolbarSpacer1" />
                        <SearchField id="_IDGenSearchField1" search="onSearch" />
                        <Button id="_IDGenButton2" icon="sap-icon://add" tooltip="Add Book" press="onAddBook" />
                    </Toolbar>
                </headerToolbar>
                <columns>
                    <Column id="_IDGenColumn1">
                        <Text id="_IDGenText2" text="ISBN" />
                    </Column>
                    <Column id="_IDGenColumn2">
                        <Text id="_IDGenText3" text="Title" />
                    </Column>
                    <Column id="_IDGenColumn3">
                        <Text id="_IDGenText4" text="Author" />
                    </Column>
                    <Column id="_IDGenColumn4">
                        <Text id="_IDGenText5" text="Quantity" />
                    </Column>
                    <Column id="_IDGenColumn5">
                        <Text id="_IDGenText6" text="Genre" />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem id="_IDGenColumnListItem1">
                        <cells>
                            <Text id="_IDGenText7" text="{isbn}" />
                            <Text id="_IDGenText8" text="{title}" />
                            <Text id="_IDGenText9" text="{author}" />
                            <Text id="_IDGenText10" text="{quantity}" />
                            <Text id="_IDGenText11" text="{genre}" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </VBox>
    </content>
</Page>
    </mvc:View>
